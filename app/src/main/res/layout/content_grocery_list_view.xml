<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".GroceryListViewActivity"
    tools:showIn="@layout/activity_grocery_list_view">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/GroceryListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/ShopListButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ShopListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOP WITH THIS LIST"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/groceryListDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATA(WIP)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ShopListButton"
        app:layout_constraintTop_toBottomOf="@+id/GroceryListView" />

</androidx.constraintlayout.widget.ConstraintLayout>